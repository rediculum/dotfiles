if has("syntax")
  syntax on
endif

set paste
set tabstop=2
set expandtab

" Disable Arrow keys in Escape mode for force learning hjkl
map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>

" Disable Arrow keys in Insert mode for force learning hjkl
imap <up> <nop>
imap <down> <nop>
imap <left> <nop>
imap <right> <nop>
